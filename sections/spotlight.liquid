{% style %}
    .product-images-container{
        width: 70%;
        display: grid;
        grid-template-columns: repeat(2, 50%);
        justify-items: center;
        align-items: center;
        grid-gap: 2%;
    }

    .product-images-container img:first-child{
        grid-column: 1 / 1;
        grid-row: 1 / 3;
    }

    .product-images-container img{
        margin: 2%;
    }
{% endstyle %}

<div class="container-fluid vh-100 py-5">
    <div class="col-lg-6 col-md-10 mx-auto text-center">
    <h3>Spotlight product for the week!</h3>

    <div>
    
    <h4>{{section.settings.product.title}}</h4>

    <div class="product-images-container mx-auto">
    {% for item in section.settings.product.images %}
        <img class="img-thumbnail" src= "{{item | image_url: width: 300}}"/>
    {% endfor %}  

</div>

<p>{{section.settings.product.price | money}}</p>

<a href="{{section.settings.button-link}}" class="btn btn-secondary">{{section.settings.product-button}}</a>
     

    </div>

</div>
</div>


{% schema %}
    {
        "name" : "Spotlight",
        "class" : "page-section",
        "settings": [
            {
                "type": "product",
                "id": "product",
                "label": "Product"
              },
              {
                "type": "text",
                "id": "product-button",
                "label": "Button label",
                "default": "See more"
              }, 
              {
                "type" : "url",
                "id" : "button-link",
                "label" : "Button link"
            }
        ],
        "presets":[
            {
               "category":"Page",
               "name":"Spotlight Product"
            }
         ] 
    }
{% endschema %}

